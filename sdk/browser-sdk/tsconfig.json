{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2016", "dom", "es5"],
      "module": "es2015",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "strictFunctionTypes": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
